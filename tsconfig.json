{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["*"]
    },
    "outDir": "./dist",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2015.promise"
    ]
  },
  "include": [
    "src/scripts/**/*",
  ],
  "exclude": [
    "./node_modules",
    "stories"
  ]
}